{
    "env": {
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "max-len": "off",
        "arrow-body-style": "off",
        "react/prop-types": "off",
        "react/jsx-props-no-spreading": "off",
        "linebreak-style": "off"
    },
    "parser": "babel-eslint",
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js", ".jsx", ".json", ".native.js"]
          }
        }
    }
}